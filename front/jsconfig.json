{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "target": "ES6",
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "jsx": "preserve"
  },
  "include": [
    "src/**/*.js",
    "src/**/*.vue",
    "tests/**/*.js"
  ],
  "exclude": ["node_modules"]
}
