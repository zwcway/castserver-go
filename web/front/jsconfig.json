{
  "vueCompilerOptions": {
    "target": 2.7,
    "extensions": [
      ".vue"
    ]
  },
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "target": "ES6",
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "jsx": "preserve"
  },
  "include": [
    "src/**/*.js",
    "src/**/*.vue",
    "tests/**/*.js"
, "src/common/format.ts", "src/common/format.ts"  ],
  "exclude": [
    "node_modules"
  ]
}